{
  "manifest_version": 2,
  "version": "0.0.1",
  "short_name": "2c2s",
  "name": "2 clicks to select",
  "description": "Click a word twice to select text",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["main.js"],
      "all_frames": true
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
